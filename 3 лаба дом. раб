A3
#include <iostream>
#include <string.h>

using namespace std;

int main() {
  char s[30];
  fgets(s, 30, stdin);
 if(((strlen(s)-1) % 2) == 0) cout << "Четное кол-во символов";
    else cout << "Нечетное кол-во символов";
return 0;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
B9
#include <iostream>
#include <string.h>

using namespace std;



int main() {
  char s[30];
  int k = 0;
  fgets(s, 30, stdin);
  for(int a=0; a<30; a++) {
    if(s[a] == '+' || s[a] == '-') k++;
  }
  cout << endl << k;
return 0;
}

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

C3
#include <iostream>
#include <string.h>

using namespace std;

int main() {
  char s[80];
  int b = 0, c;
  fgets(s,80,stdin);
  for(int i=0; i<80; i++) {
    if (s[i] == ' ') {
        b++;
    }
    else {
      c = b;
      b = 0;
    }
  if (c == 0) continue;
    else cout << c << " " ;
  }
return 0;
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
C13
#include <iostream>
#include <string.h>

using namespace std;

int main() {
  char s[30];
  int c = 0, b = 0;
  fgets(s, 30, stdin);
  for(int i=0; i<30; i++) {
      if(s[i] == s[i+1]) {
        b++;
        c = b;
      cout << c << " ";
      }
      else break;
  }
return 0;
}
