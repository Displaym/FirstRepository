B3
#include <iostream>
#include <string.h>

using namespace std;

const int sz = 30;
int main() {
  char mas[sz], mas1[sz];
  int k,b,c;
  fgets(mas, sz, stdin);
  cout << "Введите k: ";
  cin >> k;
  b = strlen(mas);
  for(int i = k,j=0; i>=k && i<b; i++) {
    mas1[j] = mas[i];
    j++;
  }
  c = strlen(mas1);
  for(int i=0; i<k; i++,c++) {
    mas1[c] = mas[i];
  }
 cout << mas1;
return 0;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
B9
#include <iostream>
#include <string.h>

using namespace std;



int main() {
  char s[30];
  int k = 0;
  fgets(s, 30, stdin);
  for(int a=0; a<30; a++) {
    if(s[a] == '+' || s[a] == '-') k++;
  }
  cout << endl << k;
return 0;
}

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

C3
#include <iostream>
#include <string.h>

using namespace std;

int main() {
  char s[80];
  int b = 0, c;
  fgets(s,80,stdin);
  for(int i=0; i<80; i++) {
    if (s[i] == ' ') {
        b++;
    }
    else {
      c = b;
      b = 0;
    }
  if (c == 0) continue;
    else cout << c << " " ;
  }
return 0;
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
C13
#include <iostream>
#include <string.h>

using namespace std;

int main() {
  char s[30];
  int c = 0, b = 0;
  fgets(s, 30, stdin);
  for(int i=0; i<30; i++) {
      if(s[i] == s[i+1]) {
        b++;
      cout << b << " ";
      }
      else break;
  }
return 0;
}
