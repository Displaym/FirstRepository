B9
#include <iostream>
#include <string.h>

using namespace std;



int main() {
  char s[30];
  int k = 0;
  fgets(s, 30, stdin);
  for(int a=0; a<30; a++) {
    if(s[a] == '+' || s[a] == '-') k++;
  }
  cout << endl << k;
return 0;
}

