A43
#include <iostream>

using namespace std;

const int sz = 30;

int main() {
  int n, mas[sz];
  cin >> n;
  for(int a=0; a<n; a++) {
  mas[a] = rand()%15;
  cout << mas[a] << " ";
  }
  for(int a=0; a<n; a++) {
    if(mas[a] % 2 == 0 && mas[a+1] % 2 == 0) {
      cout << endl << mas[a]; 
      break;
    }
      else if((mas[a] % 2 != 0) && (mas[a+1] % 2 != 0)) {
        cout << endl << mas[a];
        break;
      }
              else if((mas[a] % 2 != 0) && (mas[a+1] % 2 == 0)) {
               cout << endl << 0;
              }
                else((mas[a] % 2 == 0) && (mas[a+1] % 2 != 0)); {
                  cout << endl << 0;
                }
  }
return 0;
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
A53
#include <iostream>

using namespace std;
 
const int sz = 30;
int main() {
  int mas[sz], a, n;
  cin >> n;
  for(int i=0; i<n; i++) {
      mas[i] = rand()%15;
      cout << mas[i] << " ";
  }
  for(int i = 0; i < n; i++){
    for(int j = 0; j < n; j++){
      if(i == j)
        continue;
      if(mas[i] == mas[j])
        mas[i] = 0;
    }
  }
  cout << endl;
  for(int i = 0; i < n; i++)
    cout << mas[i] <<" ";
}

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

B3
#include <iostream>

using namespace std;

const int sz = 30;

int main() {
  int n, mas[sz], a, b;
  cin >> n;
  for(a=0; a<n; a++) {
    mas[a] = rand()%15;
    cout << mas[a] << " ";
  }
  //поиск максимального значения
  int max = mas[0];
  for(a=0; a<n; ++a) {
    if(mas[a] > max) max = mas[a];
  }
  cout << endl <<"Максимальное значение: " << max;
  //поиск минимального значения
  int min = mas[0];
  for(a=0; a<n; ++a) {
    if(mas[a] < min) min = mas[a];
  }
  cout << endl << "Минимальное значение: " << min;
  //реверс массива
  for(a=0; a<n/2; a++) {
    b = mas[a];
    mas[a] = mas[n-a-1];
    mas[n-a-1] = b;
  }
  cout << endl;
  for(a=0; a<n; a++) cout << mas[a] << " ";
}

