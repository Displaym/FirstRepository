#include <iostream>
#include <math.h>
using namespace std;

int main()
{
    int n;
    cout << "Введите N:\nN = ";
    cin  >> n;
    int mas[n+1];
    for (int i = 1; i <= n; i++) {
      mas[i] = pow(2, i);
      cout << mas[i] << ' ';
    }
    return 0;
}


#include <iostream>

using namespace std;

int main() {
  int n,i;
  cin >> n;
  int mas[n];
  cout << mas << endl;
  for(i=0; i < n/2; i++) {
    if(mas[i] % 2 != 0 && mas[i+1] % 2 == 1) {
      cout << i; 
      break;
    }
      else if(mas[i] % 2 == 0 && mas[i+1] % 2 != 1) {
        cout << i+1;
      }
              else (mas[i] % 2 != 0 && mas[i+1] % 2 != 1) {
                cout << i;
                break;
              }
  }
return 0;
}



#include <iostream>
#include <fstream>
#include <stdio.h> 

using namespace std;

int main() {
  int nSize;
  cin >> nSize;
  int anArray[nSize] = rand();
  int t = 0, i = 0;
  int nNewSize = 5;
  while(i < nSize - 1) {
    if(anArray[i] == 0) {
      break;
    }
      else {
        if(anArray[i] == anArray[i + 1]) {
          t = i;
          do {
            anArray[t] = anArray[t+1];
            t++;
          }
  while(t < nSize - 1);
    anArray[nSize-1] = 0;
  }
    else {
      i++;
    }
  }
  for(int j=0; j<nSize;j++) {
    cout << anArray[j] << ",";
    }
    cout << endl;
    }
return 0;
}



B3
#include <iostream>

using namespace std;

const int sz=30; 
 
int main() {
    int i, n, a[sz], k, l, buf, j;
    cout << "Введите количество элементов: ";
    cin >> n;
    for (i=0; i<n; i++) {
        a[i] = rand()%15;
        cout << a[i] << " ";
    }
    cout << endl;
    cout << "Введите k: ";
    cin >> k;
    cout << "Введите l: ";
    cin >> l;
    for (i=k, j=0; j<=(l-k)/2; i++, j++) {
        buf=a[i];
        a[i]=a[l-j];
        a[l-j]=buf;
    }
    cout << endl;
    for (i=0; i<n; i++)
        cout << a[i] << " ";
    cout << endl;
}



С3
#include <iostream>
#include <string.h>
using namespace std;

int main() {
  char **mass = new char *[8];
  for(int i = 1; i<8;i++) {
      mass[i] = new char[20];
      cin >> mass[i];
  }
  for(int i = 0 ; i < 8; i++) {
      for(int j = i+1; j < 8; j++)
          if(strcmp(mass[i], mass[j]) > 0){
              char* tmp = mass[i];
              mass[i] = mass[j];
              mass[j] = tmp;
          }
  }
  for(int i = 0; i < 8; i++){
      cout << mass[i] << endl;
  }
return 0;
}
