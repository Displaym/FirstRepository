#include <iostream>
#include <math.h>
using namespace std;

int main()
{
    int n;
    cout << "Введите N:\nN = ";
    cin  >> n;
    int mas[n+1];
    for (int i = 1; i <= n; i++) {
      mas[i] = pow(2, i);
      cout << mas[i] << ' ';
    }
    return 0;
}


#include <iostream>

using namespace std;

int main() {
  int n,i;
  cin >> n;
  int mas[n];
  cout << mas << endl;
  for(i=0; i < n/2; i++) {
    if(mas[i] % 2 != 0 && mas[i+1] % 2 == 1) {
      cout << i; 
      break;
    }
      else if(mas[i] % 2 == 0 && mas[i+1] % 2 != 1) {
        cout << i+1;
      }
              else (mas[i] % 2 != 0 && mas[i+1] % 2 != 1) {
                cout << i;
                break;
              }
  }
return 0;
}


