#include <iostream> 
#include <math.h> 

using namespace std; 

int H(int n, int x) { 
  if (n == 0) return 1; 
  if (n == 1) return x; 
  else return (x * H(n - 1, x)) - (n - 2) * H(n - 2, x); 
} 

int main() { 
  int n,x; 
  cin >> n >> x; 
  cout << H(n,x)<< endl; 
return 0; 
}



#include <iostream> 
#include <math.h> 

using namespace std; 

int rec (int n, int x) { 
  int h0 = 1; 
  int h1 = x; 
  int h; 
  if (n == 0) return h0;
  if (n == 1) return h1;
  while (n != 1) { 
    h = (x * (h - 1)) - ((n - 2) * (h - 2)); ;
    h0 = h1; 
    h1 = h; 
    n--; 
  } 
return h; 
} 

int main() { 
  int n,x; 
  cin >> n >> x; 
  cout << rec(n, x); 
return 0; 
} 



#include <iostream>
#include <math.h>

using namespace std;

float X(int n) {
  if (n == 1) return 1;
  if (n % 2 == 0) return sqrt (11 - 2) * X(n - 1);
  else return sqrt (11 + 2) * X(n - 1);
}

int main() {
  int n;
  cout << "Введите n: ";
  cin >> n;
  cout << X(n);
return 0;
}



#include <iostream>

using namespace std;

int Func(int n) {
  int k, j;
  if ((n > 100) && ((n % 2) != 0)) {
    cout << "Бесконечное решение"; 
  return 0;
  }
    else  k = n - 10; return k;
  if ((n < 100) && (n % 2 != 0)) {
    cout << "Бесконечное решение"; 
  return 0;
  }
    else j = Func(Func(n + 4)); return j;
}

int main() {
  int n;
  cout << "Введите четное число: ";
  cin >> n;
  cout << Func(n);
return 0;
}
